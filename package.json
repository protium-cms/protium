{
  "name": "protium",
  "version": "0.0.1",
  "author": "Jon Jaques <jaquers@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "10.14.2",
    "yarn": "1.12.3"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "lerna": "^3.8.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.12.0"
  },
  "scripts": {
    "clean": "rimraf packages/**/*.js && rimraf packages/**/*.js",
    "clean-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "bootstrap": "yarn && lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "start": "lerna run start --parallel",
    "test": "jest",
    "test:ci": "jest --ci --coverage"
  }
}
