{
  "name": "protium",
  "version": "0.0.1",
  "author": "Jon Jaques <jaquers@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.8.0",
    "patch-package": "^5.1.1",
    "postinstall-postinstall": "^2.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-native": "^0.55.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jest-mock-console": "^0.4.2",
    "lerna-semver-sync": "^1.3.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tsconfig": "^7.0.0",
    "tslint": "^5.12.0",
    "tslint-junit-formatter": "^5.1.0",
    "typescript": "^3.2.2",
    "typescript-formatter": "^7.2.2"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1.7"
  },
  "resolutions": {
    "lodash": "4.17.11",
    "react-devtools-core": "3.4.2"
  },
  "_moduleAliases": {
    "react-native": "node_modules/react-native-web"
  },
  "scripts": {
    "postinstall": "patch-package && lerna run generate-env-config --stream",
    "generate-ts-config": "./scripts/generate-ts-config.ts",
    "protium": "packages/cli/bin/protium-dev.js",
    "protium:dist": "packages/cli/bin/protium.js",
    "clean": "rimraf \"report*.xml\" \"coverage\" \"packages/**/lib\" \"**/yarn-error.log\"",
    "clean-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "bootstrap": "yarn && lerna bootstrap",
    "bootstrap:ci": "yarn --production=false --frozen-lockfile && lerna bootstrap -- --frozen-lockfile --production=false",
    "build": "lerna run build --stream && lerna run build:web --stream",
    "build-image": "yarn clean && docker build .",
    "build-ci-image": "docker build -f ci.Dockerfile -t registry.gitlab.com/protium-network/protium/ci-runner .",
    "push-ci-image": "docker push registry.gitlab.com/protium-network/protium/ci-runner:latest",
    "dev": "yarn protium dev",
    "format": "tsfmt -r",
    "lint": "tslint -c tslint.json 'packages/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "tslint --formatters-dir node_modules/tslint-junit-formatter/formatters --format junit --out report-lint.xml -c tslint.json 'packages/**/*.{ts,tsx}'",
    "start": "yarn protium start",
    "sync-package-versions": "lerna-semver-sync",
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT='./report-unit-tests.xml' JEST_SUITE_NAME='Unit Tests' jest --ci --coverage --reporters=default --reporters=jest-junit",
    "release": "echo 'disabled for now'",
    "run-env-config": "yarn --cwd packages/config run generate-env-config",
    "typecheck": "lerna exec \"tsc --noEmit\" --parallel --ignore protium-simple-reference",
    "validate": "yarn clean && yarn lint && yarn typecheck && yarn test"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "reference/*"
    ]
  }
}
