{
  "name": "protium",
  "version": "0.0.1",
  "author": "Jon Jaques <jaquers@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.8.0",
    "patch-package": "^5.1.1",
    "postinstall-postinstall": "^2.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-native": "^0.55.5",
    "@types/lodash": "^4.14.119",
    "@types/express": "^4.16.0",
    "@types/react-dom": "^16.0.11",
    "@types/resolve-pkg": "^1.0.1",
    "@types/styled-components": "^4.1.4",
    "@types/webpack": "^4.4.22",
    "@types/webpack-bundle-analyzer": "^2.13.0",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-hot-middleware": "^2.16.4",
    "@types/webpack-manifest-plugin": "^2.0.0",
    "@types/webpack-node-externals": "^1.6.3",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jest-mock-console": "^0.4.2",
    "lerna-semver-sync": "^1.3.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tsconfig": "^7.0.0",
    "tslint": "^5.12.0",
    "tslint-junit-formatter": "^5.1.0",
    "typescript": "^3.2.2",
    "typescript-formatter": "^7.2.2"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1.7"
  },
  "resolutions": {
    "lodash": "4.17.11",
    "react-devtools-core": "3.4.2"
  },
  "_moduleAliases": {
    "react-native": "node_modules/react-native-web"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "bootstrap:ci": "yarn --production=false --frozen-lockfile && lerna bootstrap -- --frozen-lockfile --production=false",
    "build": "lerna run build --parallel",
    "build:image": "yarn clean && docker build .",
    "bundle": "lerna run build:web --stream",
    "clean": "rimraf \"report*.xml\" \"coverage\" \"packages/**/lib\" \"**/yarn-error.log\"",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:test": "find . -name '.jest' -type d -prune -exec rm -rf '{}' +",
    "ci:build:image": "docker build -f ci.Dockerfile -t registry.gitlab.com/protium-network/protium/ci-runner .",
    "ci:push:image": "docker push registry.gitlab.com/protium-network/protium/ci-runner:latest",
    "ci:test": "JEST_JUNIT_OUTPUT='./report-unit-tests.xml' JEST_SUITE_NAME='Unit Tests' jest --ci --coverage --reporters=default --reporters=jest-junit",
    "debug": "yarn protium debug",
    "dev": "yarn protium dev",
    "format": "tsfmt -r",
    "generate:env:config": "yarn workspace @protium/config generate-env-config",
    "generate:ts:config": "./scripts/generate-ts-config.ts",
    "lint": "tslint -c tslint.json '**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "tslint --formatters-dir node_modules/tslint-junit-formatter/formatters --format junit --out report-lint.xml -c tslint.json 'packages/**/*.{ts,tsx}'",
    "test": "jest -i --verbose",
    "prebuild": "yarn generate:ts:config",
    "pretypecheck": "yarn generate:ts:config",
    "project:release": "echo 'disabled for now'",
    "project:sync:versions": "lerna-semver-sync",
    "protium": "packages/cli/bin/protium-dev.js",
    "protium:dist": "packages/cli/bin/protium.js",
    "postinstall": "patch-package && yarn generate:env:config && yarn generate:ts:config",
    "start": "yarn protium:dist start",
    "typecheck": "lerna run build --parallel --ignore protium-simple-reference -- --noEmit",
    "validate": "yarn clean && yarn lint && yarn typecheck && yarn test"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "reference/*"
    ]
  }
}
