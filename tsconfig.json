{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "packages",
    "paths": {
      "@protium/api*": ["api/src*", "api/src"],
      "@protium/app*": ["app/src*", "app/src"],
      "@protium/serve*": ["serve/src*", "serve/src"],
      "@protium/web*": ["web/src*", "web/src"]
    }
  },
  "exclude": [
    "**/dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
