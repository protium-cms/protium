{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "packages",
    "paths": {
      "@protium/api*": ["api/src*"],
      "@protium/app*": ["app/src*"],
      "@protium/assets*": ["assets/src*"],
      "@protium/serve*": ["serve/src*"],
      "@protium/web*": ["web/src*"]
    }
  }
}
