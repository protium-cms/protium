{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@protium/*": [
        "packages/*"
      ]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "packages/*/dist",
    "node_modules"
  ]
}
