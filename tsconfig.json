{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "packages",
    "paths": {
      "@protium/api": ["api/src*", "api/src"],
      "@protium/app": ["app/src*", "app/src"],
      "@protium/assets": ["assets/src*", "assets/src"],
      "@protium/serve": ["serve/src*", "serve/src"],
      "@protium/web": ["web/src*", "web/src"]
    }
  }
}
