{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "packages",
    "paths": {
      "@protium/api": ["api/src"],
      "@protium/api/lib": ["api/src/*"],

      "@protium/app": ["app/src"],
      "@protium/app/lib": ["app/src/*"],

      "@protium/assets": ["assets/src"],
      "@protium/assets/lib/*": ["assets/src/*"],

      "@protium/serve": ["serve/src"],
      "@protium/serve/lib/*": ["serve/src/*"],

      "@protium/web": ["web/src"],
      "@protium/web/lib/*": ["web/src/*"]
    }
  }
}
